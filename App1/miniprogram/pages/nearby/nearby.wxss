.container {
  padding: 30rpx;
}

.main-container {
  position: relative;
  height: 100vh;
  box-sizing: border-box;
  padding: 30rpx;
}

#map {
  width: 100%;
  height: 100vh;
}

.toilet-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.toilet-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.toilet-name {
  font-size: 32rpx;
  font-weight: bold;
}

.toilet-address {
  font-size: 28rpx;
  color: #888;
}

.toilet-distance {
  font-size: 28rpx;
  color: #888;
  text-align: right;
}

.mark-button, .rate-button {
  margin-top: 10rpx;
  padding: 10rpx;
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 10rpx;
  text-align: center;
}